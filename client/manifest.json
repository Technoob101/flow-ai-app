{
    "manifest_version": 3,
    "name": "Flow.AI",
    "version": "1.0.0",
    "action": {"default_icon": "public/icons/flow-icon.png"},
    "permissions": [
        "activeTab", 
        "scripting", 
        "background",
		"contextMenus",
		"bookmarks",
		"tabs",
		"storage",
		"history"
    ],
    "web_accessible_resources": [
        {
          "resources": ["public/fonts/*", "public/assets/*", "src/assets/*", "src/assets/testbox.JPG", "src/assets/websumm.jpg", "src/assets/websumm-hover.jpg"],
          "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "js": ["src/content.jsx"],
            "matches": ["https://www.apple.com/*"]
        }
    ]
}